<div>
    <h6>Войдите или зарегистрируйтесь через социальную сеть:</h6>
    {% block hwi_oauth_content %}
        {% if error is defined and error %}
            <span>{{ error }}</span>
        {% endif %}
        {% for owner in hwi_oauth_resource_owners() %}
            <a class="btn bit-success" href="{{ hwi_oauth_login_url(owner) }}">{{ owner | trans({}, 'HWIOAuthBundle') }}</a> <br />
        {% endfor %}
    {% endblock hwi_oauth_content %}
</div>
